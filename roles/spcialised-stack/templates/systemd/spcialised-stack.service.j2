[Unit]
Description=spcialised Stack (n8n, homeassistant)
Requires=docker.service
After=docker.service

[Service]
Type=oneshot
RemainAfterExit=yes
WorkingDirectory={{ spcialised_stack.base_path }}
#ReadWritePaths={{ spcialised_stack.base_path }}
ExecStart=/usr/bin/docker compose up -d
ExecStop=/usr/bin/docker compose down
ExecReload=/usr/bin/docker compose restart
TimeoutStartSec=0

User=media
Group=docker

[Install]
WantedBy=multi-user.target
