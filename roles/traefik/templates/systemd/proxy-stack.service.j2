[Unit]
Description=proxy Stack (Traefik)
Requires=docker.service
After=docker.service

[Service]
Type=oneshot
RemainAfterExit=yes
WorkingDirectory={{ proxy_stack.base_path }}
#ReadWritePaths={{ proxy_stack.base_path }}
ExecStart=/usr/bin/docker compose up -d
ExecStop=/usr/bin/docker compose down
ExecReload=/usr/bin/docker compose restart
TimeoutStartSec=0

User={{ user }}
Group=docker

[Install]
WantedBy=multi-user.target
