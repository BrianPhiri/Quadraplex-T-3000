[Unit]
Description=Media Stack (Jellyfin, arr*)
Requires=docker.service
After=docker.service

[Service]
Type=oneshot
RemainAfterExit=yes
WorkingDirectory={{ media_stack.base_path }}
#ReadWritePaths={{ media_stack.base_path }}
ExecStart=/usr/bin/docker compose up -d
ExecStop=/usr/bin/docker compose down
ExecReload=/usr/bin/docker compose restart
TimeoutStartSec=0

User={{ user }}
Group=docker

[Install]
WantedBy=multi-user.target
